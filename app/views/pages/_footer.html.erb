    <footer>
        <div class="footer-content">
                <%= link_to products_path, class: "footer-link" do %>
                  <%= image_tag "home.svg", alt: "Entrar", class: "footer-icon" %>
                  <span>Início</span>
                <% end %>

            <!-- Ícone para "Meus pedidos" -->
          <% if user_signed_in? %>
              <%= link_to my_orders_path, class: "footer-link" do %>
                  <%= image_tag "pedido.svg", alt: "Pedidos", class: "footer-icon" %>
                  <span>Pedidos</span>
              <% end %>
              <%= link_to my_products_user_path(current_user), class:"footer-link" do %>
                <%= image_tag "anuncio.svg", alt: "Anunciar", class: "footer-icon" %>
                <span>Meus Anúncios</span>
              <% end %>
            <% end %>

            <% if user_signed_in? %>
            <!-- Ícone para "Minha Conta" -->
            <%= link_to my_account_path(current_user), class: "footer-link" do %>
              <%= image_tag "growth-logo-or.png", alt: "Minha Conta", class: "footer-icon perfil-img" %>
              <span>Perfil</span>
            <% end %>
          <% else %>
            <!-- Ícone para "Login" -->
           <%= link_to "GYM Moviment", "https://gym-moviment-ea7f109defa9.herokuapp.com/", class: "gym-link", target: "_blank", rel: "noopener" %>

            <%= link_to new_user_session_path, class: "footer-link" do %>
              <%= image_tag "user.svg", alt: "Entrar", class: "footer-icon" %>
              <span>Login</span>
            <% end %>
          <% end %>

        </div>
      </footer>
